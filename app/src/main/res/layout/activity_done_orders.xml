<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order_window_new">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"


        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchOrders"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="31dp"
            android:background="@drawable/input_search"

            android:drawableRight="@drawable/find_blue"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:hint="@string/input_searc"


            android:paddingRight="10dp"
            android:paddingBottom="10dp"

            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="20sp" />




    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:background="@drawable/bottom_navigation_border"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:contentDescription="@string/button_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list"
                android:backgroundTint="@android:color/transparent"
                android:layout_weight="1"
                />

            <ImageButton
                android:contentDescription="@string/button_proffile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:backgroundTint="@android:color/transparent"
                android:layout_weight="1"
                />


        </LinearLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>